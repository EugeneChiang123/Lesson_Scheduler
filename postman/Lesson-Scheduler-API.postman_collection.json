{
  "info": {
    "name": "Lesson Scheduler API",
    "description": "Verify API endpoints work (locally and on Vercel). Set {{baseUrl}} to your deployment, e.g. https://your-app.vercel.app or http://localhost:5000. See docs/API.md for full reference.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://lesson-scheduler-lti1unhx2-eugenechiang123-gmailcoms-projects.vercel.app"
    }
  ],
  "item": [
    {
      "name": "Health (store type)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/health",
        "description": "Returns { store: \"postgres\" | \"file\" }. Confirms API is reachable."
      }
    },
    {
      "name": "List event types",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/event-types",
        "description": "List all event types (instructor UI)."
      }
    },
    {
      "name": "Get event type by id",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/event-types/id/1",
        "description": "Instructor edit: fetch one event type by numeric id. 404 if not found."
      }
    },
    {
      "name": "Get event type by slug (30min-intro)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/event-types/30min-intro",
        "description": "Public booking page: fetch event type. 200 = OK, 404 = not found (e.g. file store on Vercel or slug missing)."
      }
    },
    {
      "name": "Create event type",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"slug\": \"30min-intro\",\n  \"name\": \"30 min intro\",\n  \"description\": \"Intro call\",\n  \"durationMinutes\": 30,\n  \"allowRecurring\": false,\n  \"recurringCount\": 1,\n  \"availability\": [{\"day\": 1, \"start\": \"09:00\", \"end\": \"17:00\"}]\n}"
        },
        "url": "{{baseUrl}}/api/event-types",
        "description": "Create event type (instructor). Body: slug, name, description?, durationMinutes?, allowRecurring?, recurringCount?, availability?. 409 if slug exists."
      }
    },
    {
      "name": "Update event type",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"30 min intro (updated)\",\n  \"durationMinutes\": 45\n}"
        },
        "url": "{{baseUrl}}/api/event-types/1",
        "description": "Update event type (partial). Replace id in URL. 404 if not found, 409 if slug conflict."
      }
    },
    {
      "name": "Get slots for date",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/event-types/30min-intro/slots?date=2026-02-20",
        "description": "Available slots for a given date. Requires event type to exist."
      }
    },
    {
      "name": "List bookings",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/bookings",
        "description": "List all bookings (instructor calendar). Returns array with event_type_name, start_time, end_time, guest fields, recurring_session, notes."
      }
    },
    {
      "name": "Get booking by id",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/bookings/1",
        "description": "Get one booking by id (event edit page). Replace id in URL. 404 if not found."
      }
    },
    {
      "name": "Update booking",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"email\": \"jane@example.com\",\n  \"phone\": \"+1234567890\",\n  \"startTime\": \"2026-02-20T09:00:00\",\n  \"notes\": \"Follow-up session\"\n}"
        },
        "url": "{{baseUrl}}/api/bookings/1",
        "description": "Update one booking (partial). Replace id in URL. 409 if new time slot is taken."
      }
    },
    {
      "name": "Delete booking",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": "{{baseUrl}}/api/bookings/1",
        "description": "Delete one booking. Replace id in URL. 204 on success, 404 if not found."
      }
    },
    {
      "name": "Create booking",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"eventTypeSlug\": \"30min-intro\",\n  \"startTime\": \"2026-02-20T09:00:00\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"email\": \"jane@example.com\",\n  \"phone\": \"+1234567890\"\n}"
        },
        "url": "{{baseUrl}}/api/bookings",
        "description": "Create booking(s). Requires valid slug and a slot returned by GET slots. 409 if slot no longer available."
      }
    }
  ]
}
