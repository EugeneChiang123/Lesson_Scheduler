  },
  "dependencies": {
    "@clerk/backend": "^2.31.1",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.21.0",
    "luxon": "^3.7.2",
    "pg": "^8.11.0",
    "resend": "^6.9.2"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
